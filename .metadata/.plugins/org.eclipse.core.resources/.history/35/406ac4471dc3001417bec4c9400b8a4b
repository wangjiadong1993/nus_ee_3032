// CMSIS headers required for setting up SysTick Timer
#include "LPC17xx.h"

// Lib_MCU header files
#include "lpc17xx_pinsel.h"
#include "lpc17xx_gpio.h"
#include "lpc17xx_uart.h"
#include "Load_3032.h"
#include "SD_3032.h"
#include "string.h"


#define LOAD_FILE "load.in"

void load_write(double front, double middle, double rear, long date, long time)
{
	FL_FILE *load_write = fl_fopen(LOAD_FILE, "a");
	char data[100] ="1";
	sprintf(data, "%l %l %f %f %f\n", date, time, front, middle, rear);
	if(load_write != NULL)
	{
		fl_fputs(data, load_write);
		fl_fclose(load_write);
	}else{

	}
}

void load_read()
{

}

